<p id="notice"><%= notice %></p>

<h1>Listing Species Records</h1>

<table>
  <thead>
    <tr>
      <th>Count</th>
      <th>Day description</th>
      <th>Period</th>
      <th>Segment</th>
      <th>Species</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @species_records.each do |species_record| %>
      <tr>
        <td><%= species_record.count %></td>
        <td><%= species_record.day_description.date %></td>
        <td><%= species_record.period.start %> - <%= species_record.period.end %></td>
        <td><%= species_record.segment.name %></td>
        <td><%= species_record.species.name %></td>
        <td><%= link_to 'Show', species_record %></td>
        <td><%= link_to 'Edit', edit_species_record_path(species_record) %></td>
        <td><%= link_to 'Destroy', species_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

