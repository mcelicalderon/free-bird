<p id="notice"><%= notice %></p>

<h1>Listing Day Descriptions</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Temperature</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @day_descriptions.each do |day_description| %>
      <tr>
        <td><%= day_description.date %></td>
        <td><%= day_description.temperature %></td>
        <td><%= day_description.description %></td>
        <td><%= link_to 'Show', day_description %></td>
        <td><%= link_to 'Edit', edit_day_description_path(day_description) %></td>
        <td><%= link_to 'Destroy', day_description, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

